

<div class="container">
<div class="row">

<h3>Sign-up</h3>
<form action="/signup" method="post">
            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
            <input type="text" id="fname" name="name" placeholder="John M. Doe" required="required">
            <br>
            <label for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="text" id="email" name="email" placeholder="john@example.com" required="required">
            <br>
            <label>Password: </label>
            <input id="password" type="password" name="password" placeholder="Your password" required="required">
  <br>
            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
            <input type="text" id="adr" name="mailing-address" placeholder="542 W. 15th Street" required="required">
            <br>
            <label for="city"><i class="fa fa-institution"></i> City</label>
            <input type="text" id="city" name="city" placeholder="New York" required="required">
            <br>
            <label for="state">State</label>
            <input type="text" id="state" name="state" placeholder="NY" required="required">
              </div>
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="10001" required="required">
              </div>
            </div>
          </div>
          <br>
          <br>
         <button class="btn btn-default btn-sm" value="Log In">Create</button>
         <br>
         <p class="account-message">
    Already have an account?
    <br>
    <a href="/login">Login Instead</a>
  </p>
  <br>
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
      </form>
    </div>
  </div>



     